{
  "name": "cracket",
  "version": "0.0.2",
  "license": "MIT",
  "description": "CLI app to keep track of cryptocurrency trends",
  "bin": {
    "cracket": "dist/cli.js"
  },
  "author": "Pablo Berganza <pablo@berganza.dev>",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "tsc",
    "start": "npm run build && dist/cli.js",
    "pretest": "npm run build",
    "test": "xo && ava"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "got": "^11.8.0",
    "ink": "^3.0.8",
    "ink-big-text": "^1.2.0",
    "ink-link": "^2.0.0",
    "ink-spinner": "^4.0.1",
    "meow": "^8.0.0",
    "react": "^16.14.0",
    "swr": "^0.3.9"
  },
  "ava": {
    "typescript": {
      "extensions": [
        "tsx"
      ],
      "rewritePaths": {
        "source/": "dist/"
      }
    }
  },
  "xo": {
    "extends": "xo-react",
    "rules": {
      "react/prop-types": "off"
    }
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@sindresorhus/tsconfig": "^0.8.0",
    "@types/ink-big-text": "^1.2.0",
    "@types/react": "^17.0.0",
    "ava": "^3.13.0",
    "chalk": "^4.1.0",
    "eslint-config-xo-react": "^0.23.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "ink-testing-library": "^2.1.0",
    "typescript": "^4.1.2",
    "xo": "^0.35.0"
  }
}
